@* // Posts Section *@
@for (int i = 0; i < 5; i++)
{
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-visible hover:shadow-md transition-shadow duration-300">
        <div class="p-4 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="relative cursor-pointer">
                    <img src="https://ui-avatars.com/api/?name=User+@i&background=random" class="w-10 h-10 rounded-full object-cover border border-slate-100">
                    @if (i % 2 == 0)
                    {
                        <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></span>
                    }
                </div>
                <div>
                    <h4 class="font-bold text-gray-900 text-sm hover:text-[#345e69] cursor-pointer transition-colors">Ahmed Mohammed @i</h4>
                    <p class="text-xs text-gray-400">2 hours ago <span class="mx-1">•</span> <i class="fas fa-globe-americas"></i> Public</p>
                </div>
            </div>

            <div class="relative">
                <button onclick="toggleMenu('menu-@i')" class="text-gray-400 hover:bg-gray-100 p-2 rounded-full transition-colors focus:outline-none">
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" /></svg>
                </button>
                <div id="menu-@i" class="hidden absolute right-0 top-10 w-48 bg-white rounded-xl shadow-xl border border-gray-100 z-50 overflow-hidden">
                    <a href="#" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-50 text-gray-700 text-sm transition-colors">
                        <svg class="w-5 h-5 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>
                        Add to Favorite
                    </a>
                    <hr class="border-gray-100" />
                    <a href="#" class="flex items-center gap-3 px-4 py-3 hover:bg-red-50 text-red-600 text-sm transition-colors">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                        Report
                    </a>
                </div>
            </div>
        </div>

        <div class="px-4 pb-3">
            <p class="text-gray-700 leading-relaxed text-sm sm:text-base">
                This is a sample post content to demonstrate the UI design. It looks clean, modern, and easy to read. #Sohba #NewDesign @(i % 2 == 0 ? "🚀" : "🔥")
            </p>
        </div>

        @if (i % 2 == 0)
        {
            @* تم إزالة الأنميشن hover:scale من هنا *@
            <div onclick="openCommentModal(@i)" class="relative w-full h-80 sm:h-96 bg-gray-100 cursor-pointer overflow-hidden">
                <img src="https://picsum.photos/800/600?random=@i" class="w-full h-full object-cover" alt="Post Image">
            </div>
        }

        <div class="px-4 py-3 flex items-center justify-between border-b border-gray-50">
            <div class="flex items-center gap-[-5px]">
                <span class="flex items-center justify-center w-5 h-5 bg-[#345e69] rounded-full text-[10px] text-white z-10 border border-white">👍</span>
                <span class="flex items-center justify-center w-5 h-5 bg-red-500 rounded-full text-[10px] text-white -ml-2 border border-white">❤️</span>
                <span class="text-xs text-gray-500 ml-2 hover:underline cursor-pointer">1.2k Likes</span>
            </div>
            <div class="text-xs text-gray-500 flex gap-3">
                <span onclick="openCommentModal(@i)" class="hover:underline cursor-pointer">45 Comments</span>
                <span class="hover:underline cursor-pointer">12 Shares</span>
            </div>
        </div>

        <div class="px-2 py-1 flex justify-between items-center">
            <button class="flex-1 flex items-center justify-center gap-2 py-2 rounded-lg hover:bg-gray-50 text-gray-500 hover:text-[#345e69] transition-all">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" /></svg>
                <span class="font-bold text-sm">Like</span>
            </button>
            <button onclick="openCommentModal(@i)" class="flex-1 flex items-center justify-center gap-2 py-2 rounded-lg hover:bg-gray-50 text-gray-500 hover:text-[#345e69] transition-all">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" /></svg>
                <span class="font-bold text-sm">Comment</span>
            </button>
            <button class="flex-1 flex items-center justify-center gap-2 py-2 rounded-lg hover:bg-gray-50 text-gray-500 hover:text-[#345e69] transition-all">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" /></svg>
                <span class="font-bold text-sm">Share</span>
            </button>
        </div>
    </div>
}

@* // Modal Section كما هو بدون تغيير في الـ UI ولكن بضمان استقرار الصور *@
<div id="commentModal" class="fixed inset-0 z-[150] hidden overflow-y-auto" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-black/70 backdrop-blur-sm" onclick="closeCommentModal()"></div>
    <div class="flex min-h-screen items-center justify-center p-2 sm:p-4">
        <div class="relative bg-white w-full max-w-6xl h-[90vh] md:h-[85vh] rounded-3xl overflow-hidden shadow-2xl flex flex-col md:flex-row">

            <button onclick="closeCommentModal()" class="absolute top-4 right-4 z-50 bg-black/20 hover:bg-black/40 text-white w-8 h-8 rounded-full flex md:hidden items-center justify-center">✕</button>

            <div class="w-full md:w-3/5 bg-slate-900 flex items-center justify-center overflow-hidden">
                @* تم التأكد من عدم وجود كلاسات أنميشن هنا *@
                <img id="modalPostImg" src="https://picsum.photos/800/600" class="max-w-full max-h-full object-contain">
            </div>

            <div class="w-full md:w-2/5 flex flex-col bg-white">
                <div class="p-4 border-b flex items-center gap-3">
                    <img src="https://ui-avatars.com/api/?name=User&background=345e69&color=fff" class="w-10 h-10 rounded-full">
                    <div>
                        <h4 class="font-bold text-sm text-gray-900">Ahmed Mohammed</h4>
                        <p class="text-[10px] text-gray-400">Published 2h ago</p>
                    </div>
                    <button onclick="closeCommentModal()" class="ml-auto hidden md:block text-gray-400 hover:text-gray-600">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                    </button>
                </div>

                <div class="flex-1 overflow-y-auto p-4 space-y-4 hide-scrollbar">
                    <div class="text-sm text-gray-600 mb-6 italic">
                        "This is the post description that appears in the modal just like the feed..."
                    </div>
                    @for (int c = 1; c <= 10; c++)
                    {
                        <div class="flex gap-3">
                            <img src="https://ui-avatars.com/api/?name=User+@c&background=random" class="w-8 h-8 rounded-full">
                            <div class="bg-gray-50 rounded-2xl p-3 flex-1">
                                <h5 class="text-xs font-bold text-gray-900">User Name @c</h5>
                                <p class="text-xs text-gray-700 mt-1">Great content! Thanks for sharing this with us. ✨</p>
                            </div>
                        </div>
                    }
                </div>

                <div class="p-4 border-t bg-gray-50/50">
                    <div class="flex items-center gap-2 bg-white border border-gray-200 rounded-full px-4 py-2">
                        <input type="text" placeholder="Write a comment..." class="flex-1 text-sm bg-transparent border-none focus:ring-0 outline-none">
                        <button class="text-[#345e69] font-bold text-sm">Post</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>