@* // Modal for Creating Story *@
<div id="storyModal" class="fixed inset-0 z-[100] hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <div class="fixed inset-0 bg-black/60 backdrop-blur-sm transition-opacity" onclick="closeModal()"></div>

    <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
        <div class="relative transform overflow-hidden rounded-2xl bg-white text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-md border border-gray-100">

            <div class="border-b border-gray-100 px-4 py-3 sm:px-6 flex justify-between items-center">
                <h3 class="text-lg font-bold leading-6 text-gray-900" id="modal-title">Create a story</h3>
                <button onclick="closeModal()" type="button" class="text-gray-400 hover:text-gray-500 focus:outline-none">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <div class="px-4 py-6 sm:px-6">
                <div class="border-2 border-dashed border-gray-300 rounded-xl p-10 hover:bg-gray-50 transition-colors cursor-pointer group flex flex-col items-center justify-center">
                    <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <svg class="w-8 h-8 text-[#345e69]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <p class="font-bold text-gray-700">Upload an image</p>
                    <p class="text-xs text-gray-400 mt-1">PNG, JPG up to 10MB</p>
                </div>

                <div class="mt-4 flex items-center justify-center gap-2 text-gray-500">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-xs font-medium">Your status will be available for 24 hours</span>
                </div>
            </div>

            <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                <button type="button" class="w-full inline-flex justify-center rounded-xl border border-transparent bg-[#345e69] px-4 py-2 text-base font-bold text-white shadow-sm hover:bg-[#2a4b55] focus:outline-none focus:ring-2 focus:ring-[#345e69] focus:ring-offset-2 sm:ml-3 sm:w-auto sm:text-sm">
                    Create
                </button>
            </div>
        </div>
    </div>
</div>