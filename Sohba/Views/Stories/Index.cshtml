@model IEnumerable<Sohba.Application.DTOs.StoryAggregate.StoryResponseDto>
@{
    ViewData["Title"] = "Stories";
}

<div class="max-w-2xl mx-auto page-transition">
    <!-- Create Story -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6 hover-lift cursor-pointer" onclick="openStoryModal()">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-gradient-to-br from-[#345e69] to-[#4a8291] rounded-full flex items-center justify-center text-white">
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
            </div>
            <div>
                <h3 class="font-bold text-gray-900">Create Story</h3>
                <p class="text-gray-500 text-sm">Share a photo or video that disappears after 24 hours</p>
            </div>
        </div>
    </div>

    <!-- Stories List -->
    <div class="space-y-4">
        @foreach (var story in Model)
        {
            <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden hover-lift">
                <div class="relative h-96 bg-slate-900">
                    @if (!string.IsNullOrEmpty(story.MediaUrl))
                    { 
                        <img src="@story.MediaUrl" class="w-full h-full object-cover" />
                    }
                    <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>

                    <!-- User Info -->
                    <div class="absolute top-4 left-4 flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full border-2 border-[#345e69] p-0.5 bg-white">
                            <img src="https://ui-avatars.com/api/?name=@story.UserName&background=345e69&color=fff" class="w-full h-full rounded-full" />
                        </div>
                        <span class="text-white font-semibold text-shadow">@story.UserName</span>
                    </div>

                    <!-- Time -->
                    <div class="absolute top-4 right-4">
                        <span class="text-white/80 text-sm bg-black/30 px-3 py-1 rounded-full">
                            @((DateTime.Now - story.CreatedAt).TotalHours.ToString("0"))h ago
                        </span>
                    </div>
                </div>

                <div class="p-4">
                    <p class="text-gray-700">@story.Content</p>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-20">
            <div class="bg-slate-50 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-12 h-12 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900">No stories yet</h3>
            <p class="text-gray-500 mt-2">Be the first to share a story!</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        function openStoryModal() {
            document.getElementById('storyModal').classList.remove('hidden');
        }
    </script>
}