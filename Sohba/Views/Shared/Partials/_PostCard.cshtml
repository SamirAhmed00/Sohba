@using System.Globalization
@model IEnumerable<Sohba.Application.DTOs.PostAggregate.PostResponseDto>

@if (ViewBag.ErrorMessage != null)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-xl mb-6 shadow-sm flex items-center gap-3">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
        <span>@ViewBag.ErrorMessage</span>
    </div>
}

@* // Posts Section *@
@if (Model == null || !Model.Any())
{
    @* Empty State *@
    <div class="flex flex-col items-center justify-center py-20 text-center bg-white rounded-2xl border border-dashed border-gray-200 shadow-sm">
        <div class="bg-gray-50 p-4 rounded-full mb-4">
            <svg class="w-12 h-12 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" /></svg>
        </div>
        <h3 class="text-lg font-bold text-gray-900">No Posts Available</h3>
        <p class="text-gray-500 text-sm max-w-xs mx-auto">Your feed is empty right now. Start following pages or friends to see their latest updates!</p>
    </div>
}
else
{
    @foreach (var post in Model)
    {
        var menuId = "menu-" + post.Id;

        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-visible hover:shadow-md transition-shadow duration-300 mb-6">
            @* Header: User Info *@
            <div class="p-4 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="relative cursor-pointer">
                        <img src="https://ui-avatars.com/api/?name=@(post.AuthorName)&background=345e69&color=fff"
                             class="w-10 h-10 rounded-full object-cover border border-slate-100">
                        <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full"></span>
                    </div>
                    <div>
                        <h4 class="font-bold text-gray-900 text-sm hover:text-[#345e69] cursor-pointer transition-colors">@post.AuthorName</h4>
                        <p class="text-xs text-gray-400">
                            @post.CreatedAt.ToString("MMM dd, yyyy HH:mm", CultureInfo.InvariantCulture)
                            <span class="mx-1">•</span> <i class="fas fa-globe-americas"></i> Public
                        </p>
                    </div>
                </div>

                @* Dropdown Menu *@
                <div class="relative">
                    <button onclick="toggleMenu('@menuId')" class="text-gray-400 hover:bg-gray-100 p-2 rounded-full transition-colors focus:outline-none">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z" /></svg>
                    </button>
                    <div id="@menuId" class="hidden absolute right-0 top-10 w-48 bg-white rounded-xl shadow-xl border border-gray-100 z-50 overflow-hidden">
                        <a href="#" class="flex items-center gap-3 px-4 py-3 hover:bg-gray-50 text-gray-700 text-sm transition-colors">
                            <svg class="w-5 h-5 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>
                            Add to Favorite
                        </a>
                        <hr class="border-gray-100" />
                        <a href="#" class="flex items-center gap-3 px-4 py-3 hover:bg-red-50 text-red-600 text-sm transition-colors">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
                            Report
                        </a>
                    </div>
                </div>
            </div>

            @* Body: Content and Media *@
            <div class="px-4 pb-3">
                <p class="text-gray-700 leading-relaxed text-sm sm:text-base">@post.Content</p>
            </div>

            @if (!string.IsNullOrEmpty(post.ImageUrl))
            {
                <div onclick="openCommentModal('@post.ImageUrl', '@post.AuthorName', '@post.Content')" class="relative w-full h-80 sm:h-96 bg-gray-100 cursor-pointer overflow-hidden">
                    <img src="@post.ImageUrl" class="w-full h-full object-cover" alt="Post Image">
                </div>
            }

            @* Footer: Likes and Actions *@
            <div class="px-4 py-3 flex items-center justify-between border-b border-gray-50">
                <div class="flex items-center gap-[-5px]">
                    <span class="flex items-center justify-center w-5 h-5 bg-[#345e69] rounded-full text-[10px] text-white z-10 border border-white">👍</span>
                    <span class="flex items-center justify-center w-5 h-5 bg-red-500 rounded-full text-[10px] text-white -ml-2 border border-white">❤️</span>
                    <span class="text-xs text-gray-500 ml-2 hover:underline cursor-pointer">@post.ReactionsCount Likes</span>
                </div>
                <div class="text-xs text-gray-500 flex gap-3">
                    <span onclick="openCommentModal('@post.ImageUrl', '@post.AuthorName', '@post.Content')" class="hover:underline cursor-pointer">@post.CommentsCount Comments</span>
                    <span class="hover:underline cursor-pointer">0 Shares</span>
                </div>
            </div>

            <div class="px-2 py-1 flex justify-between items-center">
                <button class="flex-1 flex items-center justify-center gap-2 py-2 rounded-lg hover:bg-gray-50 text-gray-500 hover:text-[#345e69] transition-all">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" /></svg>
                    <span class="font-bold text-sm">Like</span>
                </button>
                <button onclick="openCommentModal('@post.ImageUrl', '@post.AuthorName', '@post.Content')" class="flex-1 flex items-center justify-center gap-2 py-2 rounded-lg hover:bg-gray-50 text-gray-500 hover:text-[#345e69] transition-all">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" /></svg>
                    <span class="font-bold text-sm">Comment</span>
                </button>
                <button class="flex-1 flex items-center justify-center gap-2 py-2 rounded-lg hover:bg-gray-50 text-gray-500 hover:text-[#345e69] transition-all">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" /></svg>
                    <span class="font-bold text-sm">Share</span>
                </button>
            </div>
        </div>
    }
}

@* // Modal Section for Split View Post Detail *@
<div id="commentModal" class="fixed inset-0 z-[150] hidden overflow-y-auto">
    <div class="fixed inset-0 bg-black/70 backdrop-blur-sm" onclick="closeCommentModal()"></div>
    <div class="flex min-h-screen items-center justify-center p-2 sm:p-4">
        <div class="relative bg-white w-full max-w-6xl h-[90vh] rounded-3xl overflow-hidden flex flex-col md:flex-row">

            @* Media Side *@
            <div class="w-full md:w-3/5 bg-slate-900 flex items-center justify-center">
                <img id="modalImg" src="" class="max-w-full max-h-full object-contain">
            </div>

            @* Data Side *@
            <div class="w-full md:w-2/5 flex flex-col bg-white">
                <div class="p-4 border-b flex items-center gap-3">
                    <img id="modalUserAvatar" src="" class="w-10 h-10 rounded-full">
                    <div>
                        <h4 id="modalUserName" class="font-bold text-sm text-gray-900"></h4>
                        <p id="modalPostTime" class="text-[10px] text-gray-400"></p>
                    </div>
                </div>

                <div class="flex-1 overflow-y-auto p-4 hide-scrollbar">
                    <div id="modalDescription" class="text-sm text-gray-600 mb-6 italic border-l-4 border-blue-500 pl-3">
                        @* Content goes here *@
                    </div>
                    @* Comments logic placeholder *@
                </div>
            </div>
        </div>
    </div>
</div>
