<div id="storyViewerModal" class="fixed inset-0 z-[200] hidden">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/90" onclick="closeStoryViewer()"></div>

    <!-- Modal Container -->
    <div class="absolute inset-0 flex items-center justify-center">
        <div class="relative w-full max-w-4xl h-[90vh] bg-black rounded-2xl overflow-hidden">

            <!-- Close Button -->
            <button onclick="closeStoryViewer()"
                    class="absolute top-4 right-4 z-30 p-2 bg-black/50 hover:bg-black/70 text-white rounded-full transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <!-- Navigation Buttons -->
            <button onclick="navigateStory('prev')"
                    class="absolute left-4 top-1/2 transform -translate-y-1/2 z-30 p-3 bg-black/50 hover:bg-black/70 text-white rounded-full transition-colors">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>

            <button onclick="navigateStory('next')"
                    class="absolute right-4 top-1/2 transform -translate-y-1/2 z-30 p-3 bg-black/50 hover:bg-black/70 text-white rounded-full transition-colors">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>

            <!-- Story Content -->
            <div id="storyContent" class="w-full h-full flex items-center justify-center">
                <!-- Media will be loaded here via JavaScript -->
            </div>

            <!-- Progress Bar -->
            <div class="absolute top-0 left-0 right-0 h-1 bg-gray-600 z-20">
                <div id="storyProgress" class="h-full bg-[#345e69] transition-all duration-100" style="width: 0%"></div>
            </div>

            <!-- User Info -->
            <div class="absolute top-4 left-4 flex items-center gap-3 z-20">
                <img id="storyUserAvatar" class="w-10 h-10 rounded-full border-2 border-[#345e69]" src="" alt="">
                <div>
                    <span id="storyUserName" class="text-white font-semibold"></span>
                    <span id="storyTime" class="text-white/60 text-sm block"></span>
                </div>
            </div>

            <!-- Story Info (Viewers) -->
            <div class="absolute bottom-4 left-4 text-white/60 text-sm z-20">
                <span id="storyViewersCount">0</span> views
            </div>
        </div>
    </div>
</div>