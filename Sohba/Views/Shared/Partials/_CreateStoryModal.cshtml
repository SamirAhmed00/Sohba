<!-- Create Story Modal -->
<div id="storyModal" class="fixed inset-0 z-[100] hidden">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/60" onclick="closeStoryModal()"></div>

    <!-- Modal Container -->
    <div class="absolute inset-0 flex items-center justify-center p-4">
        <div class="bg-white w-full max-w-md rounded-2xl shadow-2xl overflow-hidden">
            <!-- Header -->
            <div class="flex items-center justify-between p-4 border-b">
                <h3 class="text-lg font-bold text-gray-900">Add to Story</h3>
                <button onclick="closeStoryModal()" class="p-1 text-gray-400 hover:text-gray-600">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Content -->
            <div class="p-4">
                <!-- Text Input -->
                <textarea id="createStoryContent" rows="3"
                          class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#345e69]/20"
                          placeholder="What's on your mind?"></textarea>

                <!-- Image Upload -->
                <div class="mt-4">
                    <button onclick="document.getElementById('storyMedia').click()"
                            class="w-full py-3 border-2 border-dashed border-slate-300 rounded-xl hover:border-[#345e69] hover:bg-[#345e69]/5 transition-colors flex items-center justify-center gap-2">
                        <svg class="w-5 h-5 text-[#345e69]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span class="text-sm font-medium text-gray-600">Upload Photo</span>
                    </button>
                    <input type="file" id="storyMedia" accept="image/*,video/*" class="hidden" onchange="handleStoryMediaSelect(event)">
                </div>

                <!-- Preview -->
                <div id="storyPreviewContainer" class="mt-4 hidden">
                    <div class="relative">
                        <img id="storyPreview" class="w-full rounded-xl object-cover max-h-64" src="" alt="Preview">
                        <button onclick="removeStoryMedia()"
                                class="absolute -top-2 -right-2 bg-red-500 text-white rounded-full p-1 hover:bg-red-600">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Privacy -->
                <div class="mt-4">
                    <select id="storyPrivacy" class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-[#345e69]/20">
                        <option value="Public">Public</option>
                        <option value="FriendsOnly">Friends Only</option>
                    </select>
                </div>

                <!-- Post Button -->
                <button onclick="submitStory()"
                        class="w-full mt-4 py-3 bg-[#345e69] text-white font-semibold rounded-xl hover:bg-[#2a4b55] transition-colors">
                    Share to Story
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let selectedFile = null;

    function handleStoryMediaSelect(event) {
        const file = event.target.files[0];
        if (!file) return;

        selectedFile = file;
        const reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('storyPreview').src = e.target.result;
            document.getElementById('storyPreviewContainer').classList.remove('hidden');
        };
        reader.readAsDataURL(file);
    }

    function removeStoryMedia() {
        selectedFile = null;
        document.getElementById('storyMedia').value = '';
        document.getElementById('storyPreviewContainer').classList.add('hidden');
    }

    async function submitStory() {
        const content = document.getElementById('createStoryContent').value.trim();
        const privacy = document.getElementById('storyPrivacy').value;

        if (!content && !selectedFile) {
            SohbaApp.toast('Please add text or media to your story', 'error');
            return;
        }

        const formData = new FormData();
        formData.append('Content', content);
        formData.append('Privacy', privacy);

        if (selectedFile) {
            formData.append('MediaFile', selectedFile);
        }

        try {
            const response = await fetch('/Stories/Create', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: formData
            });

            const result = await response.json();

            if (result.success) {
                SohbaApp.toast('Story created successfully!', 'success');
                closeStoryModal();
                setTimeout(() => location.reload(), 1000);
            } else {
                SohbaApp.toast(result.error || 'Failed to create story', 'error');
            }
        } catch (error) {
            console.error('Error:', error);
            SohbaApp.toast('Network error', 'error');
        }
    }

    function closeStoryModal() {
        document.getElementById('storyModal').classList.add('hidden');
        document.getElementById('createStoryContent').value = '';
        document.getElementById('storyMedia').value = '';
        document.getElementById('storyPreviewContainer').classList.add('hidden');
        selectedFile = null;
        document.body.style.overflow = '';
    }
</script>