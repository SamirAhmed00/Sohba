@* // Create Post Section *@

<div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-4 px-6">
    <div class="flex items-center gap-4 mb-4">
        <img src="https://ui-avatars.com/api/?name=User&background=345e69&color=fff" class="w-11 h-11 rounded-full object-cover border-2 border-slate-100 shadow-sm" alt="Profile">
        
        <div class="flex-1">
            <input type="text"
                   placeholder="What's on your mind, User?"
                   class="w-full bg-slate-50 rounded-full px-5 py-3 text-sm text-slate-700 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-[#345e69]/20 focus:bg-white transition-all border border-transparent hover:border-slate-200 cursor-pointer"
                   onclick="SohbaApp.openCreatePostModal()"
                   readonly>
        </div>
    </div>
    <hr class="border-slate-100 mb-3" />
    <div class="flex justify-between items-center">
        <div class="flex gap-1 sm:gap-4">
            <button class="flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-red-50 transition-colors group" onclick="SohbaApp.openCreatePostModal()">
                <svg class="w-6 h-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
                <span class="text-sm font-semibold text-slate-600 group-hover:text-red-600">Live Video</span>
            </button>
            <button class="flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-green-50 transition-colors group" onclick="SohbaApp.openCreatePostModal()">
                <svg class="w-6 h-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                <span class="text-sm font-semibold text-slate-600 group-hover:text-green-600">Photo/Video</span>
            </button>
            <button class="flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-yellow-50 transition-colors group hidden sm:flex" onclick="SohbaApp.openCreatePostModal()">
                <svg class="w-6 h-6 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span class="text-sm font-semibold text-slate-600 group-hover:text-yellow-600">Feeling</span>
            </button>
        </div>
        <button class="bg-[#345e69] hover:bg-[#2a4b55] text-white px-6 py-2 rounded-xl font-bold shadow-md shadow-[#345e69]/20 transform active:scale-95 transition-all" onclick="SohbaApp.openCreatePostModal()">Post</button>
    </div>
</div>


<!-- Create Post Modal (LinkedIn/Facebook Style) -->
<div id="createPostModal" class="fixed inset-0 z-[100] hidden">
    <!-- Overlay -->
    <div class="absolute inset-0 bg-black/60" onclick="SohbaApp.closeCreatePostModal()"></div>

    <!-- Modal Container -->
    <div class="absolute inset-0 flex items-center justify-center p-4">
        <div class="bg-white w-full max-w-2xl rounded-2xl shadow-2xl overflow-hidden">
            <!-- Header -->
            <div class="flex items-center justify-between p-4 border-b">
                <h3 class="text-xl font-bold text-gray-900">Create Post</h3>
                <button onclick="SohbaApp.closeCreatePostModal()" class="p-1 text-gray-400 hover:text-gray-600 rounded-full hover:bg-gray-100">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- User Info -->
            <div class="p-4 flex items-center gap-3">
                <img src="https://ui-avatars.com/api/?name=User&background=345e69&color=fff" class="w-12 h-12 rounded-full object-cover">
                <div>
                    <h4 class="font-bold text-gray-900">User Name</h4>
                    <select class="text-xs bg-slate-100 border-0 rounded-lg px-2 py-1 text-gray-600">
                        <option>Public</option>
                        <option>Friends</option>
                        <option>Only me</option>
                    </select>
                </div>
            </div>

            <!-- Post Title -->
            <div class="px-4 pb-2">
                <input type="text"
                       id="createPostTitle"
                       placeholder="Post title..."
                       class="w-full px-0 py-2 text-gray-900 font-semibold border-0 focus:ring-0 text-xl placeholder:text-gray-400"
                       maxlength="200">
            </div>
            <!-- Post Content -->
            <div class="px-4">
                <textarea id="createPostContent" rows="4"
                          class="w-full px-0 py-2 text-gray-700 border-0 focus:ring-0 text-lg resize-none placeholder:text-gray-400"
                          placeholder="What's on your mind, User?"></textarea>
            </div>

            <!-- Image Preview (Hidden by default) -->
            <div id="imagePreviewContainer" class="px-4 pb-4 hidden">
                <div class="relative inline-block">
                    <img id="imagePreview" src="" class="max-h-64 rounded-xl object-cover" alt="Preview">
                    <button onclick="SohbaApp.removeSelectedImage()"
                            class="absolute -top-2 -right-2 bg-gray-800 text-white rounded-full p-1 hover:bg-gray-900">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="p-4 border-t border-gray-100">
                <div class="flex items-center justify-between mb-4">
                    <span class="text-sm font-medium text-gray-700">Add to your post</span>
                    <div class="flex gap-2">
                        <button onclick="document.getElementById('imageUpload').click()"
                                class="p-2 text-green-600 hover:bg-green-50 rounded-full transition-colors" title="Photo">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </button>
                        <button class="p-2 text-blue-600 hover:bg-blue-50 rounded-full transition-colors" title="Video">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                            </svg>
                        </button>
                        <button class="p-2 text-yellow-600 hover:bg-yellow-50 rounded-full transition-colors" title="Feeling">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </button>
                    </div>
                </div>

                <!-- Hidden file input -->
                <input type="file" id="imageUpload" accept="image/*" class="hidden" onchange="SohbaApp.handleImageSelect(event)">

                <!-- Post Button -->
                <button onclick="SohbaApp.submitCreatePost()"
                        class="w-full py-3 bg-[#345e69] text-white font-semibold rounded-xl hover:bg-[#2a4b55] transition-colors">
                    Post
                </button>
            </div>
        </div>
    </div>
</div>



<script>
    window.SohbaApp = window.SohbaApp || {};
    // ------------ Create Post Modal Functions -------------
           window.SohbaApp.openCreatePostModal = function() {
               const modal = document.getElementById('createPostModal');
               if (!modal) return;

               // Reset form
               document.getElementById('createPostTitle').value = '';
               document.getElementById('createPostContent').value = '';
               document.getElementById('imagePreviewContainer').classList.add('hidden');
               document.getElementById('imagePreview').src = '';
               document.getElementById('imageUpload').value = '';

               modal.classList.remove('hidden');
               document.body.style.overflow = 'hidden';

               // Focus on textarea
               setTimeout(() => document.getElementById('createPostContent')?.focus(), 100);
           };

           window.SohbaApp.closeCreatePostModal = function() {
               const modal = document.getElementById('createPostModal');
               if (!modal) return;
               modal.classList.add('hidden');
               document.body.style.overflow = '';
           };

           window.SohbaApp.handleImageSelect = function(event) {
               const file = event.target.files[0];
               if (!file) return;

               const reader = new FileReader();
               reader.onload = function(e) {
                   document.getElementById('imagePreview').src = e.target.result;
                   document.getElementById('imagePreviewContainer').classList.remove('hidden');
               };
               reader.readAsDataURL(file);
           };

           window.SohbaApp.removeSelectedImage = function() {
               document.getElementById('imagePreviewContainer').classList.add('hidden');
               document.getElementById('imagePreview').src = '';
               document.getElementById('imageUpload').value = '';
           };

             window.SohbaApp.submitCreatePost = async function() {
                console.log('submitCreatePost called');
                const title = document.getElementById('createPostTitle').value.trim();
                const content = document.getElementById('createPostContent').value.trim();
                const imageFile = document.getElementById('imageUpload').files[0];

                if (!title && !content && !imageFile) {
                    window.SohbaApp.toast('Please add a title, content, or an image', 'error');
                    return;
                }

                try {
                    const formData = new FormData();
                    formData.append('Title', title || 'Untitled Post');
                    formData.append('Content', content);
                    formData.append('IsPrivate', 'false');

                    if (imageFile) {
                        formData.append('ImageFile', imageFile);
                    }

                    const response = await fetch('/Posts/Create', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                        },
                        body: formData
                    });

                    if (response.redirected) {
                        window.location.href = response.url;
                    } else {
                        const text = await response.text();
                        console.error('Error response:', text);
                        window.SohbaApp.toast('Failed to create post', 'error');
                    }
                } catch (error) {
                    console.error('Create post error:', error);
                    window.SohbaApp.toast('Network error', 'error');
                }
            };
</script>