@model IEnumerable<Sohba.Application.DTOs.UserAggregate.NotificationResponseDto>
@{
    ViewData["Title"] = "Notifications";
}

<div class="max-w-7xl mx-auto page-transition">
    <!-- Header -->
    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 p-6 mb-6 hover-lift">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-black text-gray-900">Notifications</h1>
                <p class="text-gray-500 mt-1">Stay updated with your activity</p>
            </div>
            <button onclick="markAllRead()" class="text-sm text-[#345e69] font-semibold hover:underline">
                Mark all as read
            </button>
        </div>
    </div>

    <!-- Notifications List -->
    <div class="space-y-2">
        @foreach (var notification in Model)
        {
            <div class="@(notification.IsRead ? "bg-white" : "bg-blue-50/50") rounded-2xl shadow-sm border border-slate-100 p-4 hover-lift transition-colors">
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-full bg-[#345e69]/10 flex items-center justify-center flex-shrink-0">
                        @switch (notification.NotificationType)
                        {
                            case "PostLike":
                                <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" />
                                </svg>
                                break;
                            case "PostComment":
                                <svg class="w-5 h-5 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                                </svg>
                                break;
                            case "FriendRequest":
                                <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                                </svg>
                                break;
                            default:
                                <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                                </svg>
                                break;
                        }
                    </div>
                    <div class="flex-1">
                        <p class="text-gray-800">@notification.Message</p>
                        <span class="text-xs text-gray-400 mt-1 block">@notification.CreatedAt.ToString("MMM dd, HH:mm")</span>
                    </div>
                    @if (!notification.IsRead)
                    {
                        <span class="w-2 h-2 bg-blue-500 rounded-full flex-shrink-0 mt-2"></span>
                    }
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-20">
            <div class="bg-slate-50 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-12 h-12 text-slate-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900">No notifications</h3>
            <p class="text-gray-500 mt-2">You're all caught up!</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        async function markAllRead() {
            // Implement API call
            SohbaApp.toast('All notifications marked as read', 'success');
        }
    </script>
}